{
  "name": "template-react",
  "version": "0.0.1",
  "description": "Template client side with Reactjs at create-react-app",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i-espinola/template-react.git"
  },
  "bugs": {
    "url": "https://github.com/i-espinola/template-react/issues"
  },
  "readme": "https://github.com/i-espinola/template-react#readme",
  "license": "https://github.com/i-espinola/template-react/blob/master/LICENSE",
  "main": "server/index.js",
  "homepage": ".",
  "scripts": {
    "clean": "rm -rf build package-lock.json npm-debug.log",
    "local": "rm -rf /var/www/localServer/public/* && cp -R ./* /var/www/localServer/public/ && cd /var/www/localServer/public/ && npm run build && node /var/www/localServer/backend/server.js",
    "start": "npm run build && pm2 start server/index.js",
    "build": "npm run clean && react-scripts build",
    "eject": "react-scripts eject",
    "dev": "react-scripts start",
    "test": "react-scripts test"
  },
  "dependencies": {
    "bootstrap": "^4.4.1",
    "express": "^4.17.1",
    "express-favicon": "^2.0.1",
    "pm2": "^4.2.1",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.4.0",
    "@testing-library/user-event": "^7.1.2",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.7.2",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "node-sass": "^4.13.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
